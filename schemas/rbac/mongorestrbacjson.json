{
  "collections": [
    {
      "collection_name": "users",
      "rbac_config": {
        "read": [
          {
            "user_role": "default",
            "patterns": [
              "_id",
              "email",
              "name",
              "profile",
              "profile.*",
              "profile.age",
              "profile.country",
              "profile.interests",
              "profile.avatar",
              "status",
              "lastLogin",
              "createdAt",
              "updatedAt",
              "product_reviews",
              "product_reviews.*",
              "product_reviews._id",
              "product_reviews.productId",
              "product_reviews.userId",
              "product_reviews.rating",
              "product_reviews.title",
              "product_reviews.content",
              "product_reviews.verified",
              "product_reviews.helpful",
              "product_reviews.helpful.*",
              "product_reviews.helpful.yes",
              "product_reviews.helpful.no",
              "product_reviews.status",
              "product_reviews.images",
              "product_reviews.images.*",
              "product_reviews.createdAt",
              "product_reviews.updatedAt"
            ]
          },
          {
            "user_role": "user",
            "patterns": [
              "_id",
              "email",
              "name",
              "profile.*",
              "status",
              "lastLogin",
              "createdAt",
              "updatedAt",
              "product_reviews.*"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          },
          {
            "user_role": "guest",
            "patterns": [
              "_id",
              "name",
              "profile.avatar",
              "status"
            ]
          }
        ],
        "write": [
          {
            "user_role": "default",
            "patterns": [
              "profile.age",
              "profile.country",
              "profile.interests",
              "profile.avatar"
            ]
          },
          {
            "user_role": "user",
            "patterns": [
              "profile.*",
              "lastLogin"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "delete": [
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ]
      }
    },
    {
      "collection_name": "product_reviews",
      "rbac_config": {
        "read": [
          {
            "user_role": "default",
            "patterns": [
              "_id",
              "productId",
              "userId",
              "rating",
              "title",
              "content",
              "verified",
              "helpful",
              "helpful.*",
              "helpful.yes",
              "helpful.no",
              "status",
              "images",
              "images.*",
              "createdAt",
              "updatedAt"
            ]
          },
          {
            "user_role": "user",
            "patterns": ["*"]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "write": [
          {
            "user_role": "user",
            "patterns": [
              "rating",
              "title",
              "content",
              "images"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "delete": [
          {
            "user_role": "user",
            "patterns": [
              "_id"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ]
      }
    },
    {
      "collection_name": "products",
      "rbac_config": {
        "read": [
          {
            "user_role": "default",
            "patterns": [
              "_id",
              "name",
              "description",
              "price",
              "category",
              "status",
              "images",
              "images.*",
              "createdAt"
            ]
          },
          {
            "user_role": "user",
            "patterns": [
              "_id",
              "name",
              "description",
              "price",
              "category",
              "status",
              "inventory.stock",
              "images.*",
              "categories.*",
              "reviews.*",
              "createdAt",
              "updatedAt"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "write": [
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "delete": [
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ]
      }
    },
    {
      "collection_name": "orders",
      "rbac_config": {
        "read": [
          {
            "user_role": "default",
            "patterns": [
              "_id",
              "orderNumber",
              "status",
              "totalAmount",
              "createdAt"
            ]
          },
          {
            "user_role": "user",
            "patterns": [
              "_id",
              "orderNumber",
              "customerId",
              "status",
              "totalAmount",
              "customer.*",
              "items.*",
              "createdAt",
              "updatedAt"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "write": [
          {
            "user_role": "user",
            "patterns": [
              "status"
            ]
          },
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ],
        "delete": [
          {
            "user_role": "admin",
            "patterns": ["*"]
          }
        ]
      }
    }
  ]
}