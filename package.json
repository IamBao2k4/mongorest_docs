{
  "name": "mongorest",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "tsx src/transports/express/index.ts",
    "dev_test": "nodemon --watch src --ext ts --exec \"npx ts-node src/core/rbac/rbac-test.ts\"",
    "dev": "concurrently \"tsc --watch\" \"nodemon\"",
    "dev:express": "nodemon --exec tsx src/transports/express/index.ts",
    "dev:fastify": "nodemon --exec tsx src/core/transports/fastify/main.ts",
    "dev:http": "nodemon --exec tsx src/transports/http/main.ts",
    "demo": "tsx src/transports/express/demo-server.ts",
    "dev:demo": "nodemon --exec tsx src/transports/express/demo-server.ts",
    "demo:new": "tsx src/transports/expressServer.ts",
    "dev:new": "nodemon --exec tsx src/transports/expressServer.ts",
    "universal:start": "tsx -e \"require('./src/transports/express').runCLI()\"",
    "universal:demo": "tsx -e \"require('./src/transports/express').runCLI()\" demo",
    "universal:config": "tsx -e \"require('./src/transports/express').runCLI()\" config",
    "build": "tsc",
    "test": "cd src/core && jest",
    "test:watch": "cd src/core && jest --watch",
    "test:coverage": "cd src/core && jest --coverage",
    "test:unit": "cd src/core && tsx test/run-tests.ts unit",
    "test:integration": "cd src/core && tsx test/run-tests.ts integration",
    "test:core": "cd src/core && tsx test/run-tests.ts",
    "test:core:watch": "cd src/core && tsx test/run-tests.ts watch",
    "test:core:coverage": "cd src/core && tsx test/run-tests.ts coverage",
    "test:universal": "jest src/core/test/",
    "test:demo": "tsx src/transports/express/test-demo.ts",
    "test:demo:server": "tsx src/transports/express/test-demo.ts demo",
    "test:full": "tsx src/transports/express/test-demo.ts both",
    "debug:rbac": "tsx debug-rbac.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.10.0",
    "@elastic/elasticsearch": "^8.8.0",
    "ajv": "^8.17.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fastify": "^5.3.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.15.0",
    "mysql2": "^3.6.0",
    "pg": "^8.11.0",
    "redis": "^5.5.6"
  }
}
